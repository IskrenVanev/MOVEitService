<Window x:Class="MOVEit.UI.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MOVEit.UI"
        mc:Ignorable="d"
        Title="MOVEit Settings" Height="175" Width="253" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TextBlock Margin="10,10,10,0" TextWrapping="Wrap" Text="Directory:" VerticalAlignment="Top"/>
        <TextBox x:Name="syncDirectoryTb" Margin="10,31,60,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Button Content="Save" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" RenderTransformOrigin="0.353,1.395" Width="89" Click="SaveButton_Click"/>
        <Button Content="..." HorizontalAlignment="Right" Margin="0,31,10,0" VerticalAlignment="Top" Height="18" Width="45" Click="BrowseButton_Click"/>

    </Grid>
</Window>
